<%- include('partials/header') %>

    <div class="max-w-7xl mx-auto px-4 py-6">
        <!-- Masonry Grid -->
        <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-6">

            <% post.forEach((item)=> { %>
                <div class="mb-6 break-inside-avoid">

                    <!-- Card -->
                    <div class="bg-white rounded-2xl shadow hover:shadow-xl transition duration-300 overflow-hidden">

                        <!-- Image -->
                        <a href="<%= item.image %>">
                            <img src="<%= item.image %>" alt="Post image"
                                class="w-full object-cover hover:scale-105 transition duration-300" />
                        </a>

                        <!-- Content -->
                        <div class="p-4">
                            <p class="text-sm font-semibold text-gray-800 truncate">
                                <%= item.user.fullName %>
                            </p>

                            <% if(item.description){ %>
                                <p class="text-xs text-gray-600 mt-1 line-clamp-2">
                                    <%= item.description %>
                                </p>
                                <button class="text-sm text-gray-500 hover:text-red-500 mt-2">
                                    ❤️ <%= item.likes.length %>
                                </button>
                                <% } %>
                        </div>

                    </div>
                </div>
                <% }) %>

        </div>
    </div>

    <%- include('partials/footer') %>