<%- include('partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white w-full max-w-sm p-8 rounded-xl shadow-lg text-center">

    <!-- Pinterest logo -->
    <img
      src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
      alt="pin logo"
      class="w-16 mx-auto mb-4"
    />

    <p class="text-2xl font-semibold mb-4">Sign In</p>

    <% if(error.length > 0){ %>
      <p class="text-red-500 text-sm mb-3">
        <%= error %>
      </p>
    <% } %>

    <form action="/login" method="post" class="space-y-4">
      <input
        type="text"
        placeholder="Username"
        name="username"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required
      />

      <input
        type="password"
        placeholder="Password"
        name="password"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required
      />

      <button
        class="w-full bg-red-600 text-white py-2 rounded-full font-semibold hover:bg-red-700 transition"
      >
        Login
      </button>
    </form>

    <footer class="mt-6 text-xs text-gray-600">
      <p class="mb-3">
        By continuing, you agree to Pinterest's
        <b>Terms of Service, Privacy Policy.</b>
      </p>

      <hr class="mb-3" />

      <a href="/" class="text-red-600 font-medium hover:underline">
        Not on Pinterest yet? Sign up
      </a>
    </footer>

  </div>
</div>


<%- include('partials/footer') %>
