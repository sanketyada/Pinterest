<%- include('partials/header') %>

<div class="max-w-5xl mx-auto px-4 py-10">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 bg-white rounded-2xl shadow-lg overflow-hidden">

    <!-- Image Section -->
    <div class="bg-gray-100">
      <img 
        src="<%= post.image %>" 
        alt="Pin Image"
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Content Section -->
    <div class="p-6 flex flex-col justify-between">

      <div>
        <h1 class="text-xl font-semibold text-gray-900 mb-2">
          <%= post.postText %>
        </h1>

        <% if(post.description){ %>
          <p class="text-sm text-gray-600 mb-4">
            <%= post.description %>
          </p>
        <% } %>

        <!-- User Info -->
        <div class="flex items-center gap-3 mt-4">
          <img 
            src="<%= post.user.dp || '/images/default-dp.png' %>" 
            class="w-10 h-10 rounded-full object-cover"
            alt="User DP"
          />
          <p class="text-sm font-medium text-gray-800">
            @<%= post.user.username %>
          </p>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-6 flex items-center justify-between">
        <p class="text-sm text-gray-500">
          ❤️ <%= post.likes.length %> likes
        </p>

        <button class="bg-red-600 text-white px-4 py-2 rounded-full text-sm font-semibold hover:bg-red-700 transition">
          Save
        </button>
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer') %>
