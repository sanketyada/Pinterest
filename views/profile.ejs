<%- include('partials/header', { title: 'Profile', cssFile: 'profile.css' }) %>

<div class="min-h-screen bg-gray-100 py-10">

  <!-- Hidden DP Upload Form -->
  <form id="uploadForm" hidden action="/changeDp" method="post" enctype="multipart/form-data">
    <input type="file" name="dp" id="fileInput">
  </form>

  <div class="max-w-5xl mx-auto px-4">

    <!-- PROFILE HEADER -->
    <div class="bg-white rounded-3xl shadow-lg p-8 flex flex-col items-center mb-10">

      <!-- DP -->
      <div class="relative">
        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-red-500">
          <img src="<%= user.dp %>" alt="Profile Picture" class="w-full h-full object-cover" />
        </div>

        <!-- Change DP -->
        <button id="para"
          class="absolute bottom-0 right-0 bg-white border text-xs px-3 py-1 rounded-full shadow hover:bg-gray-100">
          Change
        </button>
      </div>

      <!-- Info -->
      <h2 class="text-xl font-semibold mt-4">
        <%= user.fullName || user.username %>
      </h2>

      <p class="text-gray-500 text-sm">
        @<%= user.username %>
      </p>

      <p class="text-gray-600 text-sm mt-1">
        <%= user.email %>
      </p>

      <!-- Stats -->
      <div class="flex gap-6 mt-4 text-center">
        <div>
          <p class="font-semibold"><%= user.posts.length %></p>
          <p class="text-xs text-gray-500">Pins</p>
        </div>
      </div>

      <!-- Action -->
      <a href="/add"
        class="mt-6 bg-red-600 text-white px-6 py-2 rounded-full font-semibold hover:bg-red-700 transition">
        Add Pin
      </a>
    </div>

    <!-- PINS PREVIEW -->
    <% if(user.posts.length){ %>
    <div>
      <h3 class="text-lg font-semibold mb-4">Your Pins</h3>

      <div class="columns-1 sm:columns-2 md:columns-3 gap-6">
        <% user.posts.forEach((item) => { %>
          <div class="mb-6 break-inside-avoid">
            <a href="/show/pins/<%= item._id %>">
              <img 
                src="<%= item.image %>" 
                class="w-full rounded-2xl shadow hover:shadow-xl transition"
                alt="Pin"
              />
            </a>
          </div>
        <% }) %>
      </div>
    </div>
    <% } %>

  </div>
</div>

<script>
  const elem = document.getElementById("para");
  const fileInput = document.querySelector("#uploadForm input");

  elem.addEventListener("click", () => {
    fileInput.click();
  });

  fileInput.addEventListener("change", () => {
    document.getElementById("uploadForm").submit();
  });
</script>

<%- include('partials/footer') %>
