<%- include('partials/header', { title: 'Home Pageree' , cssFile: 'profile.css' }) %>
  <!-- PROFILE SECTION -->
  <div class="min-h-screen bg-gray-100 py-10">
    <form id="uploadForm" hidden action="/changeDp" method="post" enctype="multipart/form-data">
      <input type="file" name="dp" id="fileInput">
    </form>
    <div class="max-w-5xl mx-auto px-4">

      <!-- Profile Card -->
      <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center mb-10">

        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-red-500 mb-4">
          <img src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=600" alt="Profile Picture"
            class="w-full h-full object-cover" />
        </div>
        <!-- 
        //Dp changeDp -->

<p id="para" class="cursor-pointer">Some text here</p>

          <h3 class="text-gray-500 mb-1">
            @<%= user.username %>
          </h3>

          <p class="text-sm text-gray-600">
            <%= user.email %>
          </p>

          <p class="text-sm text-gray-700 mt-2">
            <%= user.username %>
          </p>

          <a href="/logout" class="mt-4 bg-red-600 text-white px-6 py-2 rounded-full hover:bg-red-700 transition">
            Logout
          </a>
      </div>

      <!-- UPLOAD FORM -->
      <div class="bg-white rounded-xl shadow-md p-6 mb-10">
        <form action="/uploads" method="post" enctype="multipart/form-data" class="space-y-4">
          <input type="text" name="caption" placeholder="Write a caption..."
            class="w-full border px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />

          <input type="file" name="pic" class="w-full border px-4 py-2 rounded-md bg-white" />

          <button type="submit"
            class="w-full bg-red-600 text-white py-2 rounded-md font-semibold hover:bg-red-700 transition">
            Submit
          </button>
        </form>
      </div>

      <!-- POSTS GRID -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">

        <% user.posts.forEach((item)=> { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden">

            <img src="/images/uploads/<%= item.image %>" alt="Post Image" class="w-full h-56 object-cover" />

            <div class="p-4">
              <h5 class="text-center font-medium text-gray-800">
                <%= item.postText %>
              </h5>
            </div>

          </div>
          <% }) %>

      </div>

    </div>

  </div>

<script>
  const elem = document.getElementById("para");
  const fileInput = document.querySelector("#uploadForm input");

  elem.addEventListener("click", () => {
    fileInput.click();
  });
  fileInput.addEventListener("change", () => {
  document.getElementById("uploadForm").submit();
});
</script>
  <%- include('partials/footer') %>